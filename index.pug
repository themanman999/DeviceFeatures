-
	var deviceArray = [
		['Tilt Left/Right [gamma]','doTiltLR'],
		['Tilt Front/Back [beta]','doTiltFB'],
		['Direction [alpha]','doDirection'],
		['API used','moApi'],
		['linear acceleration (excl. gravity)','moAccel'],
		['acceleration incl. gravity','moAccelGrav'],
		['rotation rate','moRotation'],
		['interval (ms)','moInterval']
	]
mixin pTag(string, idName, isUnknown)
	div= string
		b(id=idName)= isUnknown===0 ? 'unknown' : 'not available'
		|.
mixin deviceMotion
	#DeviceMotion
		div Device Motion
		each item, i in deviceArray
			div
				div= deviceArray[i][0]
				div(id=deviceArray[i][1])
		.container#logoContainer
			img#imgLogo(src='./images/mario8bit320x320.png', alt='HTML5')
doctype
html(lang='en')
	head
		title Device Fearture
		include meta
		script(type='text/javascript' src='./vibration.js')
		style
			include style.css
		script
			include swScript.js
	body
		main
			div#title
				div This is what HTML5 can do on mobile device
			div#onlineStatus 
				div Online Status
				+pTag('Initial connection state was ','isOnline', 0)
				#networkState
			div#networkTypeSpeed
				div Network Type & Speed
				+pTag('Current theoretical network type is ','networkType', 1)
				+pTag('Current effective network type is ','effectiveNetworkType', 1)
				+pTag('Current max downlink speed is ','downlinkMax', 0)
			div#batteryStatus
				div Battery Status
				div.battery Initial battery status was 
					b#charging unknown
					|,
				div charging time 
					b#chargingTime unknown
					|,
				div discharging time  
					b#dischargingTime unknown
					|,
				div Battery level 
					b#level unknown
					|.
				#batteryUpdate
			div#deviceMemory
				div Device Memory
				div Your device memory is 
					b#result unknown
					|  Gib.
				div Estimated storage usage is 
					b#usage unknown
					|  bytes.
				div Estimated storage quota is 
					b#quota unknown
					|  bytes.
				div Estimated usage is 
					b#percent unknown
					|  %.
			div#permission
				div Permissions
					div Geolocation   
						button#geolocation-status(onlick='requestGeolocation()') unknown
						|.
					div Notifications
						button#notifications-status(onclick="requestNotifications()") unknown
						|.
					div Push
						button#push-status(onclick="requestPush()") unknown
						|.
					div Midi
						button#midi-status(onclick="requestMidi()") unknown
						|.	
					div Camera
						button#camera-status(onclick="requestCamera()") unknown
						|.	
					div Microphone
						button#microphone-status(onclick="requestMicrophone()") unknown
						|.		
					div Background Sync 
						b#background-sync-status unknown
						|.		
					div Ambient Light Sensor 
						b#ambient-light-sensor-status unknown
						|.			
					div Accelerometer 
						b#accelerometer-status unknown
						|.			
					div Gyroscope 
						b#gyroscope-status unknown
						|.				
					div Magnetometer 
						b#magnetometer-status unknown
						|.		
					div#logTarget
			div#localNotifications 
				div Local Notifications
				div
					|
					button.btn.btn-default(onclick="nonPersistentNotification()") Non-persistent notification
					button.btn.btn-default(onclick="persistentNotification()") Persistent notification
			div#vibration 
				div Vibration
				.btn(onclick='vibrateSimple()') Vibrate for 200 ms
				.btn(onclick='vibratePattern()') Vibrate with pattern
			div#geolocation 
				div Geolocation
				.btn#getGeolocation Ask for location
			+deviceMotion
			p#footer
				small Demo from 
					a(href='https://www.html5rocks.com/en/tutorials/device/orientation/', target='_blank', rel='noopener') HTML5 Rocks
					|  article.
			script(type='text/javascript' src='./networkState.js')
			script(type='text/javascript' src='./networkSpeed.js')
			script(type='text/javascript' src='./batteryStatus.js')
			script(type='text/javascript' src='./deviceMemory.js')
			script(type='text/javascript' src='./geolocation.js')
			script(type='text/javascript' src='./devicePosition.js')
			script(type='text/javascript' src='./deviceMotion.js')
			script(type='text/javascript' src='./storageQuotas.js')
			script(type='text/javascript' src='./localNotification.js')
			script(type='text/javascript' src='./permissions.js')